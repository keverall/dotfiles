# Load p10k configuration (prefer compiled if available)
if [[ -f ~/.p10k.zsh.zwc && ~/.p10k.zsh.zwc -nt ~/.p10k.zsh ]]; then
  source ~/.p10k.zsh.zwc
else
  [[ -f ~/.p10k.zsh ]] && source ~/.p10k.zsh
fi
# Auto-compile p10k config when changed (no-op if unchanged)
if [[ -f ~/.p10k.zsh && ( ! -f ~/.p10k.zsh.zwc || ~/.p10k.zsh -nt ~/.p10k.zsh.zwc ) ]]; then
  zmodload zsh/zcompile 2>/dev/null
  zcompile -R -- ~/.p10k.zsh.zwc ~/.p10k.zsh 2>/dev/null
fi

# Aliases
# Recompile Powerlevel10k config on demand
alias p10k-rebuild='zmodload zsh/zcompile && zcompile -R -- ~/.p10k.zsh.zwc ~/.p10k.zsh'
